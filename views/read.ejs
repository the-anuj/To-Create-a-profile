<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/public/stylesheets/style.css">
</head>
<body class="bg-zing-900 h-screen">
    <div class="bg-zinc-900 h-full w-full p-10" >
        <a href="/" class="text-blue-600 text-1xl">Go back to home page</a>
        <div class="users flex flex-wrap justify-start gap-4 mt-4">
            <% if(users.length>0){ %>
                <% users.forEach((user)=>{ %>
                    <div class="max-w-80 h-full p-5 bg-zinc-700">
                        <div class="w-full h-52 bg-zinc-500">
                            <img class="w-full h-52 " src="<%= user.image %>" alt="">
                        </div>
                        <div class="mt-5 max-w-full">
                            <div class="flex flex-col">
                                <h3 class="text-white "><%= user.name %></h3>
                                <h5 class="text-zinc-500"><%= user.email %></h5>
                                <h6 class="text-zinc-500"><%= user.contact %></h6>
                            </div>
                            <div class="flex flex-c justify-between leading-10">
                                <a class="text-zinc-600 underline cursor-pointer" href="/edit/<%= user._id %>">Edit</a>
                                <a class="text-red-500" href="/delete/<%= user._id %>">Remove</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% }else{ %>
                    <h4 class="text-zinc-500 mt-10">No user found..</h4>
            <% } %>
                
        
           
        </div>
        
    </div>
</body>
</html>
